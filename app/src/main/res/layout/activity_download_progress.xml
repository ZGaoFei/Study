<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DownloadProgressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp" />

        <Button
            android:id="@+id/bt_set_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="set progress" />

        <Button
            android:id="@+id/bt_auto_set_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="auto" />

    </LinearLayout>

    <com.zgf.androidlib.customerview.DownloadProgressView
        android:id="@+id/progress_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="50dp"
        android:text="hello world!"
        android:textColor="#000000"
        android:textSize="16sp"
        app:backgroundColor="#ffffff"
        app:backgroundProgressColor="@color/colorPrimary"
        app:textProgressColor="#ffffff" />

</FrameLayout>